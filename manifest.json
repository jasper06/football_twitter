{
    "manifest_version": 3,
    "name": "Excelsior Post Tracker",
    "version": "1.0",
    "description": "Tracks new posts about Excelsior football club",
    "permissions": [
        "alarms",
        "storage",
        "notifications",
        "activeTab",
        "scripting"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "host_permissions": [
        "https://x.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://x.com/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "icons": {
        "48": "icon.png",
        "128": "icon.png"
    }
}